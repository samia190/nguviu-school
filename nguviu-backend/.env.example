# MongoDB Connection (Render/Railway/any PaaS)
# Use any of these variable names - the app checks all of them:
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/nguviu
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nguviu
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/nguviu
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/nguviu

# JWT Secret (generate a random string - CRITICAL for security!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Origins (comma-separated list of allowed frontend URLs)
# For Render: https://your-app.onrender.com,http://localhost:5173
# For Netlify: https://your-app.netlify.app,http://localhost:5173
CORS_ORIGINS=http://localhost:5173,https://your-frontend.onrender.com

# Server Port (Render auto-assigns this, no need to set manually)
PORT=4000

# Public Origin (optional - used for generating absolute URLs for uploads)
# Set this to your backend URL in production
PUBLIC_ORIGIN=https://your-backend.onrender.com

# Client Origin (for password reset links)
CLIENT_ORIGIN=https://your-frontend.onrender.com

# Node Environment
NODE_ENV=development

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=no-reply@yourdomain.com

# Password Reset Configuration
RESET_TOKEN_EXPIRES_MS=3600000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=5

# Optional: AWS S3 for file storage (recommended for production)
# S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BASE_URL=https://your-cloudfront-domain.com
# S3_PUBLIC=true
