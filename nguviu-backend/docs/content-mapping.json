{
  "home": {
    "type":"home",
    "fields":["title","intro","body","attachments","heroImages","data"],
    "attachmentsDescription":"carousel/hero images (attachments[].url / downloadUrl)",
    "endpoints":{"get":"GET /api/content/home","update":"PUT /api/content/:id"},
    "frontend":"nguviu-frontend/src/components/Home.jsx"
  },
  "page-backgrounds":{
    "type":"page-backgrounds",
    "fields":["attachments"],
    "attachmentsDescription":"site background images",
    "endpoints":{"get":"GET /api/content/page-backgrounds","update":"PUT /api/content/:id"},
    "frontend":"nguviu-frontend/src/components/Home.jsx"
  },
  "about":{
    "type":"about",
    "fields":["heroBackgroundUrl","heroTitle","heroSubtitle","title","intro","mottoHeading","motto","coreValues","mission","vision","principalImageUrl","principalMessage","deputyImageUrl","deputyMessage","attachments","data"],
    "endpoints":{"get":"GET /api/content/about","update":"PUT /api/content/:id"},
    "frontend":"nguviu-frontend/src/components/About.jsx"
  },
  "admissions":{
    "type":"admissions",
    "fields":["title","overview","process","requirements","importantDates","contactInfo","downloadsHeading","attachments"],
    "endpoints":{"get":"GET /api/content/admissions","adminUpload":"POST /api/admin/content (type=admissions)","update":"PUT /api/content/:id"},
    "frontendPublic":"nguviu-frontend/src/components/Admissions.jsx",
    "frontendAdmin":"nguviu-frontend/src/components/AdmissionsManagement.jsx"
  },
  "gallery":{
    "type":"gallery",
    "model":"GalleryItem collection",
    "fields":["title","body","attachments[]"],
    "endpoints":{"list":"GET /api/content/gallery","create":"POST /api/content/gallery","update":"PATCH /api/content/gallery/:id","uploadAttachments":"POST /api/content/gallery/:id/attachments or use /api/files + PATCH"},
    "frontendPublic":"nguviu-frontend/src/components/Gallery.jsx",
    "frontendAdmin":"nguviu-frontend/src/components/GalleryManagement.jsx"
  },
  "downloads":{
    "type":"downloads",
    "fields":["title","body","attachments"],
    "endpoints":{"list":"GET /api/downloads","contentApi":"/api/content/:type or POST /api/admin/content"},
    "frontend":"nguviu-frontend/src/components/Downloads (search repo)"
  },
  "newsletter":{
    "type":"newsletter",
    "fields":["title","body","attachments"],
    "endpoints":{"get":"GET /api/content/newsletter","admin":"POST /api/admin/content"},
    "frontend":"nguviu-frontend/src/components/Newsletter.jsx"
  },
  "events":{
    "type":"events",
    "fields":["title","body","date","attachments"],
    "endpoints":{"get":"GET /api/content/events","admin":"POST /api/admin/content or /api/content/events"},
    "frontend":"nguviu-frontend/src/components/Events.jsx"
  },
  "curriculum":{
    "type":"curriculum",
    "fields":["title","intro","body","attachments"],
    "frontend":"nguviu-frontend/src/components/Curriculum.jsx"
  },
  "feestructure":{
    "type":"feestructure",
    "fields":["title","body","attachments"],
    "frontend":"nguviu-frontend/src/components/FeeStructure.jsx"
  },
  "policies":{
    "type":"policies",
    "fields":["title","body","attachments"],
    "frontend":"nguviu-frontend/src/components/Policies.jsx"
  },
  "contact":{
    "type":"contact",
    "fields":["address","phone","email","mapEmbedUrl","formHeading","attachments"],
    "endpoints":{"get":"GET /api/content/contact","update":"PUT /api/content/:id"},
    "frontend":"nguviu-frontend/src/components/Contact.jsx"
  },
  "homework":{
    "type":"file_submissions (File model)",
    "fields":["originalName","filename","url","level","subject","notes","studentEmail","status","reviewerNotes"],
    "endpoints":{"upload":"POST /api/files","list":"GET /api/files (teacher/admin)","submissions":"/api/submissions (admin CRUD)"},
    "frontendPublic":"nguviu-frontend/src/components/HomeworkPortal.jsx",
    "frontendAdmin":"nguviu-frontend/src/components/AdminSubmissions.jsx"
  }
}
